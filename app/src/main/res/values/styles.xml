<resources>

	<!-- Base application theme. 系统默认的 水波纹白灰色-->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	<!--隐藏头部actionbar-->
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<!--伸缩toolbar主题-->
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



	<!--本app的theme-->
	<style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
		<!--测试actionbar颜色 colorPrimary-->
		<!--<item name="windowActionBar">true</item>
		<item name="windowNoTitle">false</item>-->
	</style>

	<style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item> <!--toolbar的颜色-->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--顶部导航栏的颜色-->
		<item name="colorAccent">@color/colorAccent</item>  <!--一些按钮的颜色 edittext光标颜色-->
		<item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
	</style>

	<style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
		<item name="android:minWidth">0dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:scaleType">centerInside</item>
	</style>


	<style name="AppTheme.NavigationView" parent="@style/Theme.DesignDemo">
		<item name="android:background">@android:color/transparent</item>
		<item name="selectableItemBackground">@drawable/selector_navigation_menu_item_bg</item> <!--点击水波纹颜色 无效果待定 21  selectableItemBackground-->
		<item name="textAppearanceListItem">@style/TextAppearance.App.Title</item>  <!--系统字体-->
		<item name="colorControlHighlight">#44bbbbbb</item> <!--水波纹颜色-->
	</style>


	<style name="TextAppearance.App.Title" parent="@style/TextAppearance.App.Large">
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	<style name="TextAppearance.App.Large" parent="@style/TextAppearance.App">
		<item name="android:textSize">@dimen/text_size_large</item>
	</style>
	<style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="Widget.CardContent" parent="android:Widget">
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">24dp</item>
		<item name="android:orientation">vertical</item>
	</style>




	<!--bilibili toolbar style-->
	<style name="AppTheme.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
		<item name="android:listSelector">@drawable/item_background</item>
		<item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
		<item name="colorControlNormal">@color/gray_dark</item>
		<item name="colorControlActivated">@color/theme_color_primary</item>
		<item name="colorControlHighlight">@color/gray_trans</item>
	</style>

	<style name="TextAppearance.App.Topbar.Title" parent="@style/TextAppearance.App.XLarge">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="TextAppearance.App.XLarge" parent="@style/TextAppearance.App">
		<item name="android:textSize">@dimen/text_size_xlarge</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="TextAppearance.App.Topbar.Subtitle" parent="@style/TextAppearance.App.Subtitle">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="TextAppearance.App.Subtitle" parent="@style/TextAppearance.App.Medium" />

	<style name="TextAppearance.App.Medium" parent="@style/TextAppearance.App">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<!--bilibili toolbar style-->


	<style name="first_category_text_style">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:background">@drawable/cc_layout_selector</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">4dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="first_live_re_layout">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:background">@drawable/live_middle_button_selector</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="first_live_text_style">
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="android:background">@null</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:drawablePadding">8.0dip</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/text_size_large</item>
		<item name="android:textColor">@android:color/white</item>
	</style>



</resources>
