<resources>

	<!-- Base application theme. 系统默认的 水波纹白灰色-->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	<!--隐藏头部actionbar-->
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<!--伸缩toolbar主题-->
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



	<!--本app的theme-->
	<style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
		<!--测试actionbar颜色 colorPrimary-->
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">false</item>
	</style>

	<style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">#fffb7299</item> <!--toolbar的颜色-->
		<item name="colorPrimaryDark">#ffb85671</item> <!--顶部导航栏的颜色-->
		<item name="colorAccent">#FF4081</item>  <!--一些按钮的颜色 edittext光标颜色-->
		<item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
	</style>

	<style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
		<item name="android:minWidth">0dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:scaleType">centerInside</item>
	</style>


	<style name="AppTheme.NavigationView" parent="@style/Theme.DesignDemo">
		<item name="android:background">@android:color/transparent</item>
		<item name="selectableItemBackground">@drawable/selector_navigation_menu_item_bg</item> <!--点击水波纹效果 21  selectableItemBackground-->
		<item name="textAppearanceListItem">@style/TextAppearance.App.Title</item>  <!--系统字体-->
		<item name="colorControlHighlight">#44bbbbbb</item>
	</style>


	<style name="TextAppearance.App.Title" parent="@style/TextAppearance.App.Large">
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	<style name="TextAppearance.App.Large" parent="@style/TextAppearance.App">
		<item name="android:textSize">@dimen/text_size_large</item>
	</style>
	<style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>
</resources>
